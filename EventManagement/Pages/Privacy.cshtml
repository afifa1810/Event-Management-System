    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var text = "!";
            const animatedTextElement = document.getElementById("animated-text");
            text.split("").forEach((letter, index) => {
                const span = document.createElement("span");
                span.textContent = letter;
                span.classList.add("letter", "animated");
                span.style.animationDelay = `${index * 0.1}s`; // Delay for each letter
                animatedTextElement.appendChild(span);
            });

            const themeCards = document.querySelectorAll('.theme-card');
            const imageCards = document.querySelectorAll('.image-card');
            const title = document.getElementById('themes-title');
            const description = document.getElementById('themes-description');
            const newSection = document.querySelector('.new-section'); // Select the new section

            const observerOptions = {
                root: null, // Use the viewport as the root
                threshold: 0.1 // Trigger when 10% of the card is visible
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible'); // Add visible class to trigger animation
                        observer.unobserve(entry.target); // Stop observing once it has been animated
                    }
                });
            }, observerOptions);

            // Observe title and description for fade-in effect
            observer.observe(title);
            observer.observe(description);

            themeCards.forEach(card => {
                observer.observe(card); // Observe each theme card
            });

            imageCards.forEach(card => {
                observer.observe(card); // Observe each image card
            });

            // Observe the new section for fade-in effect
            observer.observe(newSection); // Observe the new section
        });
    </script>
