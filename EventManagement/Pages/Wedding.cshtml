        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: inherit; /* Use the same background image */
                filter: blur(2px); /* Adjust the blur level */
                z-index: 1; /* Place behind the text */
            }

            .hero-section * {
                position: relative;
                z-index: 2; /* Ensure text is above the blurred background */
            }

            .hero-section h1 {
                font-size: 3.5rem;
                font-weight: bold;
                padding: 20px 40px;
                border-radius: 10px;
                letter-spacing:7px;
            }

        .main-section {
            display: flex;
            flex-direction: column;
            justify-content: center; /* Vertically center content */
            align-items: center; /* Horizontally center content */
            text-align: center; /* Center-align text */
            height: 300px; /* Increase section height */
            background-color:floralwhite;/* Section background color */
            padding: 20px;
        }

            .main-section h1 {
