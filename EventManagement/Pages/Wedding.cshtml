                font-weight: bold;
                color: #6b6836; /* White heading text */
                margin: 0; /* Remove default margins */
            }

            .main-section p {
                font-size: 1.2rem; /* Adjust paragraph font size */
                color: #984747; /* White text for paragraph */
                margin-top: 10px; /* Space below the heading */
                max-width: 800px; /* Limit text width */
                line-height: 1.8; /* Adjust line spacing */
            }

            .main-section hr {
                width: 80%; /* Line width */
                border: 1px solid #6b5636; /* Line color */
                margin: 30px 0; /* Space above and below the line */
            }

            .main-section img {
                width: 30%;
                height: 450px;
                object-fit: cover;
                border-radius: 35px;
                margin: 0px;
                padding: 5px; /* Added padding for main-section images */
            }

        .mid-section {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 25px 10px;
            flex-wrap: wrap;
            background-color: floralwhite;
            margin: 0;
            border-radius: 10px;
            position: relative;
            margin-bottom: 30px;
        }


            .mid-section .content-wrapper {
