            background-color: #f9f9f9; /* Light background for the section */
        }

        .fade-in {
            opacity: 0; /* Start hidden */
            transform: translateY(20px); /* Start slightly below */
            transition: opacity 1.0s ease, transform 1.0s ease; /* Transition for opacity and position */
        }

            .fade-in.visible {
                opacity: 1; /* Fully visible */
                transform: translateY(0); /* Move to original position */
            }
        .image-gallery {
            display: flex;
            gap: 10px; /* Space between images */
            z-index: 1; /* Keep images below text */
        }

        .gallery-image {
            width: 350px; /* Adjust image width */
            height: 400px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            border: 5px solid white; /* White border around images */
        }

        .hero-heading {
            flex-shrink: 0; /* Prevent heading from shrinking */
            max-width: 30%; /* Limit heading width */
            text-align: left; /* Align text to the left */
            color: #2c3e50; /* Darker color for better readability */
            font-size: 2rem;
            font-weight: bold;
        }

        .image-center {
            z-index: 2; /* Bring center image above others */
            transform: translateY(-20px); /* Slightly lift the center image */
        }

        .image-left {
            transform: translateX(-10px);
            z-index: 1;
        }

        .image-right {
            transform: translateX(10px);
            z-index: 1;
        }

        .hero h1 {
            animation: fadeIn 1s ease-in-out;
        }

        

        .intro {
