                color: #4a4a4a;
            }

            .intro p {
                font-size: 1.2em;
                line-height: 1.6;
                color: #666;
            }

        .gallery {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            padding: 30px;
        }

        .image-box {
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
            opacity: 0;
            animation: fadeIn 1s forwards;
            height: 350px;
        }

            .image-box img {
                width: 100%;
                height: 100%;
                display: block;
                object-fit: cover;
                transition: transform 0.4s ease-in-out;
            }

            .image-box:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

                .image-box:hover img {
                    transform: scale(1.1);
                }
       

        .packages-section {
            text-align: center;
            background-color: #fff;
            padding: 60px 20px;
            position: relative;
        }

            .packages-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: inherit;
                filter: blur(2px);
                z-index: 1;
            }

            .packages-section h1 {
